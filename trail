    camp_details.append([entry_name.get,entry_last.get,entry_number.get(),entry_item.get(),entry_hired.get()])
    entry_name.delete(0,'end')
    entry_age.delete(0,'end')
    entry_gender.delete(0,'end')
    counters['total_entries'] += 1
 
 
