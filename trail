from tkinter import*
def quit ():
    main_window.destroy()

def entry_print():
    print(entry_first_name.get())
    print(entry_last_name.get())


def main():
    Button(main_window, text="Quit",command=quit) .grid(row=1,column=5)
    Button(main_window, text="Print",command=entry_print) .grid(row=1,column=6)
